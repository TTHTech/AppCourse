<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_lessson"
    android:padding="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    >
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_7sdp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:text="Giới thiệu về lập trình Android và môi trường phát triển"
            android:maxLines="2"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            />

        <TextView
            android:id="@+id/tv_lesson_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/04/2024"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_7sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/gray_text"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="3"
            android:textAlignment="textEnd"
            />


    </RelativeLayout>



    <View
        android:id="@+id/divider_review"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#E4E3E3"
        android:layout_below="@+id/layout_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_review"
        >
        <TextView
            android:id="@+id/tv_lesson_description"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Tìm hiểu môi trường phát triển"

            android:padding="@dimen/_7sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="3"
            />

        <TextView
            android:id="@+id/btn_lesson_detail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/btn_custom_enable"
            android:text="Detail"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </RelativeLayout>


</RelativeLayout>