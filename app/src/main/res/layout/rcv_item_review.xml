<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_review"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_5sdp"
    >

    <LinearLayout
        android:id="@+id/layout_img_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_5sdp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_100sdp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:id="@+id/img_review"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/cart"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name_instructor"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="Student1"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@+id/card_view"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:maxLines="2"
            android:gravity="center"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/layout_img_name"
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="vertical"
        >



        <TextView
            android:id="@+id/tv_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/3/2024"
            android:textColor="#938F8F"
            android:textSize="@dimen/_12sdp"

            />
        <kr.co.prnd.readmore.ReadMoreTextView
            android:id="@+id/tv_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bai hoc hay qua!"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            app:readMoreColor="#4CAF50"
            app:readMoreMaxLine="3"
            app:readMoreText="…đọc thêm"
            />

    </LinearLayout>


    
</RelativeLayout>