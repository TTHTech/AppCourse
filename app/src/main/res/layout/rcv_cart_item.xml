<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_cart_item"
    android:layout_margin="@dimen/_2sdp"
    android:padding="@dimen/_5sdp"
    >

    <ImageView
        android:id="@+id/img_cart_item"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/hehe"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/layout_info_cart_item"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cart_item"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/tv_name_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Node js cơ bản"
            android:textColor="#03A9F4"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_price_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tv_price_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="148"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_18sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/tv_price_course_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="#4CAF50"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/tv_price_course"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_course_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Văn Trung IT"
            android:textColor="#FF9800"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_17sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </LinearLayout>



</RelativeLayout>